# Server Configuration
NODE_ENV=development
PORT=3030

# Database
MONGODB_URL=mongodb://localhost:27017/gospeltruth

# JWT Secrets (Generate strong random strings, minimum 32 characters)
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Client
CLIENT_URL=http://localhost:5173

# Session
SESSION_SECRET=your_session_secret_minimum_32_characters_long

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
